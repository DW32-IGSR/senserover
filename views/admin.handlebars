<!-- 
  /*var arrays = {
    productos: productos_encontrados,
    drones: drones_encontrados,
    datosUsuario: usuarios_encontrados
  }*/ 
  -->

<div class="container">
  <div class="row">
    <div class="table-responsive">
      <!-- tabla desplegable -->
      <!-- productos-->
      <table class="table" border="1">
        <th>id</th>
        <th>nombre</th>
        <th>precio</th>
        <th>imagenes</th>
        <th>especificaciones</th>
        <th>opiniones</th>
        <th>accion</th>
        {{#each productos}}
        <!--<p>{{this}}</p>-->
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.nombre}}</td>
          <td>{{this.precio}}</td>
          <td>
            <ol>
              {{#each this._doc.imagenes}}
              <li>{{this.descripcion}} : {{this.url_img}}</li>
              {{/each}}
            </ol>
          </td>
          <td>
            {{#each this._doc.especificaciones}}
            <li>{{this.nombre}}:{{this.valor}}</li>
            {{/each}}
          </td>
          <td>
            {{#each this._doc.opiniones}}
            <li>{{this.nombre}}{{this.valoracion}}</li>
            {{this.opinion}} {{/each}}
          </td>
          <td>
            <button class="btn-primary">modificar</button>
            <button class="btn-danger">borrar</button>
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>

<!-- productos -->
<div class="container">
  <div class="row">
    <ul>
      {{#each drones}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <div class="accordion">
      {{#each drones}}
      <h3>{{this.nombre}}</h3>
      <div>
        <p>{{this.fecha_caducidad}}</p>
        <p>{{this.fecha_compra}}</p>
        <p>{{this.id_usuario}}</p>
      </div>
      {{/each}}
    </div>      
  </div>
</div>

<!-- drones -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <ul>
        {{#each datosUsuario}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

{{>footer}}

<script>
$(function() {
  $( ".accordion" ).accordion();
});
</script>

