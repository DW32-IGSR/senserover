  <div id="perfil" class="w-section section grafic">
    <div class="w-container">
      <div class="section-title-group">
        <h2 class="section-heading centered">Perfil de Usuario</h2>
      </div>
      <div data-duration-in="300" data-duration-out="100" class="w-tabs tabs-wrapper">
        <div class="w-tab-menu tab-menu-perfil">
          <a data-w-tab="Datos Personales" class="w-tab-link w--current w-inline-block button tab">
            <div>Datos Personales</div>
          </a>
          <a data-w-tab="Contrasenya" class="w-tab-link w-inline-block button tab">
            <div>Cambiar contraseña</div>
          </a>
          <a data-w-tab="Imagen" class="w-tab-link w-inline-block button tab">
            <div>Cambiar imagen</div>
          </a>
        </div> <!-- seccion-perfil: w-container: w-tabs tabs-wrapper: w-tab-menu tab-menu -->
        <div class="w-tab-content">
          <div data-w-tab="Datos Personales" class="w-tab-pane w--tab-active">
            <div class="w-container">
              <div class="section-title-group-perfil">
                <h2 class="section-heading centered white">DATOS PERSONALES</h2>
              </div>
              <div class="w-form form-wrapper">
                <form id="form_datos_personales" name="form_datos_personales" data-name="form_datos_personales" class="form" action="/perfil/datos" method="post">
                  <div class="w-row">
                    <div class="w-col w-col-4">
                      <div class="text_form">Nombre:</div>
                      <div class="form-group">
                        <!--<input id="nombre" type="text" placeholder="Nombre" name="nombre" required="required" data-name="nombre" class="w-input form-field">-->
                        <input id="nombre" type="text" placeholder="Nombre" name="nombre" required="required" data-name="nombre" class="w-input form-field" value={{datos_perfil.nombre}}>
                      </div>
                    </div>
                    <div class="w-col w-col-4">
                      <div class="text_form">Apellidos:</div>
                      <div class="form-group">
                        <input id="apellidos" type="text" placeholder="Apellidos" name="apellidos" required="required" data-name="apellidos" class="w-input form-field" value={{datos_perfil.apellidos}}>
                      </div>
                    </div>
                    <div class="w-col w-col-4">
                      <div class="text_form">DNI:</div>
                      <div class="form-group">
                        <input id="dni" type="text" placeholder="DNI" name="dni" required="required" data-name="dni" class="w-input form-field" value={{datos_perfil.dni}}>
                      </div>
                    </div>
                  </div> <!-- seccion-perfil: w-container: w-form form-wrapper: w-row(1º row) -->
                  <div class="w-row">
                    <div class="w-col w-col-7">
                      <div class="text_form">Dirección:</div>
                      <div class="form-group">
                        <input id="direccion" type="text" placeholder="Dirección" name="direccion" required="required" data-name="direccion" class="w-input form-field" value={{datos_perfil.direccion}}>
                      </div>
                    </div>
                    <div class="w-col w-col-5">
                      <div class="text_form">Código Postal:</div>
                      <div class="form-group">
                        <input id="cp" type="text" placeholder="Código Postal" name="cp" required="required" data-name="cp" class="w-input form-field" value={{datos_perfil.codigo_postal}}>
                      </div>
                    </div>
                  </div> <!-- seccion-perfil: w-container: w-form form-wrapper: w-row(2º row) -->
                  <div class="w-row">
                    <div class="w-col w-col-6">
                      <div class="text_form">Email:</div>
                      <div class="form-group">
                        <input id="email" type="email" placeholder="Email" name="email" required="required" data-name="email" class="w-input form-field" value={{datos_perfil.email}}>
                      </div>
                    </div>
                  </div> <!-- seccion-perfil: w-container: w-form form-wrapper: w-row(3º row) -->
                  <div class="form-group">
                    <input type="submit" value="Guardar" data-wait="Please wait..." class="w-button button full-width perfil" id="btn_datos_personales">
                  </div>
                </form>
                <div class="w-form-done">
                  <p>Thank you! Your submission has been received!</p>
                </div>
                <div class="w-form-fail">
                  <p>Oops! Something went wrong while submitting the form :(</p>
                </div>
              </div> <!-- seccion-perfil: w-container: w-form form-wrapper -->
            </div> <!-- container Datos Personales-->
          </div> <!-- seccion-perfil: w-container: w-tabs tabs-wrapper: w-tab-content: w-tab-pane: Datos Personales -->
          <div data-w-tab="Contrasenya" class="w-tab-pane">
            <div class="w-container">
              <div class="section-title-group-perfil">
                <h2 class="section-heading centered white">CAMBIAR CONTRASEÑA</h2>
              </div>
              <div class="w-form form-wrapper">
                <form id="form_change_pass" name="form_change_pass" data-name="form_change_pass" class="form" action="/perfil/changePassword" method="post">
                  <div class="w-row">
                    <div class="w-col w-col-4">
                    </div>
                    <div class="w-col w-col-4">
                      <div class="text_form">Contraseña actual:</div>
                      <div class="form-group">
                        <input id="pass_actual" type="password" placeholder="Contraseña actual" name="pass_actual" required="required" data-name="pass_actual" class="w-input form-field">
                      </div>
                    </div>
                    <div class="w-col w-col-4">
                    </div>
                  </div> <!-- seccion-perfil: w-container: w-form form-wrapper: w-row(1º row) -->
                  <div class="w-row">
                    <div class="w-col w-col-4">
                    </div>
                    <div class="w-col w-col-4">
                      <div class="text_form">Nueva contraseña:</div>
                      <div class="form-group">
                        <input id="pass_nueva" type="password" placeholder="Nueva contraseña" name="pass_nueva" required="required" data-name="pass_nueva" class="w-input form-field">
                       </div>
                    </div>
                  </div> <!-- seccion-perfil: w-container: w-form form-wrapper: w-row(2º row) -->
                  <div class="w-row">
                    <div class="w-col w-col-4">
                    </div>
                    <div class="w-col w-col-4">
                      <div class="text_form">Repite la nueva contraseña:</div>
                      <div class="form-group">
                        <input id="pass_nueva_conf" type="password" placeholder="Repite la nueva contraseña" name="pass_nueva_conf" required="required" data-name="pass_nueva_conf" class="w-input form-field">
                      </div>
                    </div>
                    <input id="id_usuario" hidden="true" type="text" name="id_usuario" required="required" data-name="id_usuario" class="w-input form-field" value={{datos_perfil._id}}>
                  </div> <!-- seccion-perfil: w-container: w-form form-wrapper: w-row(3º row) -->
                  <div class="form-group">
                    <input type="submit" value="Guardar" data-wait="Please wait..." class="w-button button full-width perfil" id="btn_change_pass">
                  </div>
                </form>
                <div class="w-form-done">
                  <p>Thank you! Your submission has been received!</p>
                </div>
                <div class="w-form-fail">
                  <p>Oops! Something went wrong while submitting the form :(</p>
                </div>
              </div> <!-- seccion-perfil: w-container: w-form form-wrapper -->
            </div> <!-- container Cambiar Contraseña -->
          </div> <!-- seccion-perfil: w-container: w-tabs tabs-wrapper: w-tab-content: w-tab-pane: Cambiar Contraseña -->
          <div data-w-tab="Imagen" class="w-tab-pane">
            <div class="w-container">
              <div class="section-title-group-perfil">
                <h2 class="section-heading centered white">CAMBIAR IMAGEN</h2>
              </div>
              <div class="w-form form-wrapper">
                <form id="email-form" name="email-form" data-name="Email Form" class="form" enctype="multipart/form-data">
                  <div class="w-row">
                    <div class="w-col w-col-4">
                    </div>
                    <div class="w-col w-col-4">
                      <div class="text_form">Seleccionar imagen:</div>
                      <input id="imagen" type="file" name="fichero" data-name="imagen" class="img-perfil">
                    </div>
                    <div class="w-col w-col-4">
                    </div>
                  </div>
                  <input type="submit" value="Guardar" data-wait="Please wait..." class="w-button button full-width perfil">
                </form>
                <div class="w-form-done">
                  <p>Thank you! Your submission has been received!</p>
                </div>
                <div class="w-form-fail">
                  <p>Oops! Something went wrong while submitting the form :(</p>
                </div>
              </div> <!-- seccion-perfil: w-container: w-form form-wrapper -->
            </div> <!-- container Cambiar Imagen -->
          </div> <!-- seccion-perfil: w-container: w-tabs tabs-wrapper: w-tab-content: w-tab-pane: Imagen -->
        </div> <!-- seccion-perfil: w-container: w-tabs tabs-wrapper: w-tab-content -->
      </div> <!-- seccion-perfil: w-container: tabs-wrapper -->
    </div> <!-- Perfil: container -->
  </div> <!-- Perfil -->

