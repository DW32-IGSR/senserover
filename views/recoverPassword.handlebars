<link rel="stylesheet" type="text/css" href="/css/dron-terrestre.webflow.css">
<body>
  <div data-collapse="all" data-animation="default" data-duration="400" data-contain="1" class="w-nav navigation-bar">
    <div class="w-container">
      <a href="/" class="w-nav-brand brand-link"><h1 class="brand-text">Sense-Rover</h1></a>
    </div> <!-- Navbar container -->
  </div> <!-- Navbar -->
  
<div id="articulos" class="w-section section grafic">
  <div class="w-container">
    <div class="w-form">
      <div class="w-form form-wrapper">
        <form id="recover_pass_form" name="recover_pass_form" data-name="recover_pass_form" class="form" action="/newPassword" method="post">
          <div class="text_form">Nueva contraseña:</div>
          <div class="form-group">
            <input id="pass_nueva" type="password" placeholder="Nueva contraseña" name="pass_nueva" required="required" data-name="pass_nueva" class="w-input form-field">
          </div>
          <div class="text_form">Repite la contraseña:</div>
          <div class="form-group">
            <input id="pass_nueva_conf" type="password" placeholder="Repite la contraseña" name="pass_nueva_conf" required="required" data-name="pass_nueva_conf" class="w-input form-field">
          </div>
          <input id="email" hidden type="text" name="email" required="required" data-name="email" class="w-input form-field" value={{user.email}}>
          <input id="key" hidden type="text" name="key" required="required" data-name="key" class="w-input form-field" value={{user.activacion_key}}>
          <div class="form-group">
            <input type="submit" value="Recuperar contraseña" data-wait="Please wait..." class="w-button button full-width" id="btn_recover_pass">
          </div>
        </form>
        <div class="w-form-done">
          <p>Thank you! Your submission has been received!</p>
        </div>
        <div class="w-form-fail">
          <p>Oops! Something went wrong while submitting the form :(</p>
        </div>
      </div> <!-- Contacto: container: formulario -->
      
